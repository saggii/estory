#!/usr/bin/env node
var path = require('path');
var program = require('commander');
var runTests = require('../lib/runner').runTests;

function list(val) {
  return val.split(',');
}

program
  .version('0.0.1')
  .usage('[options]')
  .option('-b, --browsers [browsers]', 'Browsers to use for tests', list, ['Chrome', 'Firefox'])
  .option('-c, --continuous', 'Run tests continually once')
  .parse(process.argv);

var directory = program.args[0] || '.';
var resolvedDir = path.resolve(directory);
runTests(resolvedDir, program);
